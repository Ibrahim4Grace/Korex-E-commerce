<!DOCTYPE html>
<html lang="en">

<head>
    <title>Korex StyleHub</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Korex StyleHub" name="keywords">
    <meta content="Korex StyleHub" name="description">

      <!-- Favicon -->
      <link href="../../img/logo.PNG" rel="icon"> 

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="../../lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="../../lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="../../css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="../../css/styles.css" rel="stylesheet">

</head>

<body>

     

    <div class="container-xxl position-relative bg-white d-flex p-0">
       
        <!-- Navbar Start -->
     <%- include (`../partials/merchantHeader`); -%>
     <!-- Navbar End -->

                            <!-- Product Start -->
   
        <div class="container-fluid pt-4 px-4">
            <div class="bg-light text-center rounded p-4">
    
                
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div width="600" align="center" class="devicewidth">
                      <div>
                          <!-- Start header Section -->   
                        <div class="headHolder">
                          <div width="560" align="center" class="devicewidthinner headingAddress">
                            <div>         
                              <div>
                                <div class="addressTable">
                                  452B ICM Mall Road
                                </div>
                              </div>
                              <div>
                                <div  class="addressTable">
                                  Maryland, Lagos NG, 23401
                                </div>
                              </div>
                              <div>
                                <div class="addressTable space">
                                  <strong>Phone:</strong>  234-703-4432-762 |<strong> Email:</strong> KorexstyleHub.com
                                </div>
                              </div>            
                            </div>
                          </div>
                        </div> 
                                <!-- End header Section -->
                                
                                <!-- Start product heading Section -->
                          <div>
                            <div class="divHolder">
                              <div width="560" align="center"class="devicewidthinner">
                                <div>
                                  <div>
                                    <div class="heading">
                                      <%- productInfo.productName %> Product Information
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                                <!-- End  product heading Section -->
                                
                                <!-- Start information product Section -->
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords">  Product Name</div>
                                  <span class="spanword">  <%= productInfo.productName %> </span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords"> Product Price</div>
                                  <span class="spanword">  <%= productInfo.productPrice %> </span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords"> Product Shipping Fee</div>
                                  <span class="spanword">  <%= productInfo.productShipping %> </span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords"> Product Category</div>
                                  <span class="spanword">  <%= productInfo.productCategory %> </span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords"> Product Brand</div>
                                  <span class="spanword">  <%= productInfo.productBrand %> </span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords"> Product Size</div>
                                  <span class="spanword">  <%= productInfo.productSize %> </span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords"> Product Color</div>
                                  <span class="spanword">  <%= productInfo.productColor %> </span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords"> Product Quantity</div>
                                  <span class="spanword">  <%= productInfo.productQuantity %> </span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords"> Product In Stock</div>
                                  <span class="spanword">  <%= productInfo.productInStock %> </span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords"> Product Low Stock</div>
                                  <span class="spanword">  <%= productInfo.productLowStock %> </span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div>
                            <div class="divHolder">
                              <div  align="center"class="devicewidthinner">
                                <div>
                                  <div class="divwords"> Product Out Of Stock</div>
                                  <span class="spanword">  <%= productInfo.productOutOfStock %> </span>
                                </div>
                              </div>
                            </div>
                            <div>
                              <div class="divHolder">
                                <div  align="center"class="devicewidthinner">
                                  <div>
                                    <div class="divwords"> Product Out Of Stock</div>
                                    <span class="spanword">  <%= productInfo.productOutOfStock %> </span>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div>
                              <div class="divHolder">
                                <div  align="center"class="devicewidthinner">
                                  <div>
                                    <div class="divwords"> Product Description</div>
                                    <span class="spanword">  <%= productInfo.productDescription %> </span>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div>
                              <div class="divHolder">
                                <div align="center" class="devicewidthinner">
                                  <div>
                                    <div class="divwords">Product Images</div>
                                  </div>
                                  <% if (productInfo.images && productInfo.images.length > 0) { %>
                                      <!-- If there are images, loop through and display them -->
                                      <% productInfo.images.forEach((image, index) => { %>
                                        <div>
                                          <img class="product-image" src="data:<%= image.contentType %>;base64,<%= image.data.toString('base64') %>" alt="Product Image <%= index + 1 %>">
                                        </div>
                                      <% }) %>
                                  <% } else { %>
                                    <div>NA</div>
                                  <% } %>
                                </div>
                              </div>
                            </div>
                            <div>
                              <div class="divHolder">
                                <div  align="center"class="devicewidthinner">
                                  <div>
                                    <div class="divwords">Product Creation date</div>
                                    <span class="spanword">  <%= productInfo.date_added.toLocaleString() %> </span>
                                  </div>
                                </div>
                              </div>
                            </div>
                                 <!-- End product Section -->
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div> 
              </div>
            </div>
          
            <!-- Product End -->

        
     <!-- Footer Start -->
     <%- include (`../partials/merchantFooter`); -%>
     <!-- Footer End -->



</body>

</html>