  let len = 0;
  for (let i = 0; i < AttachmentArray.length; i++) {
    if (AttachmentArray[i] !== undefined) {
      len++;
    }
  }
  //To check the length does not exceed 3 files maximum
  if (len > 2) {
    return false;
  } else {
    return true;
  }
